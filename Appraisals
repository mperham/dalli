appraise 'rails3' do
  gem 'rails', '>= 3', '< 4'
end

appraise 'rails4' do
  gem 'rails', '>= 4.0.0.beta', '< 5'
end

appraise 'rails_edge' do
  gem 'rack', git: 'git://github.com/rack/rack.git'
  gem 'arel', git: 'git://github.com/rails/arel.git'
  gem 'rails', git: 'git://github.com/rails/rails.git'
end
